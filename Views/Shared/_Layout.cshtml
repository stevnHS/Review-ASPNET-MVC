<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stevn的MVC範例</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            @Html.ActionLink("員工管理系統", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("員工管理", "Index", "Employees", null, new { @class="nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("新增員工", "Create", "Employees", null, new { @class = "nav-link" })
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("員工管理系統", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("員工管理", "Index", "Employees")</li>
                    <li>@Html.ActionLink("新增員工", "Create", "Employees")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Stevn的MVC範例</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>